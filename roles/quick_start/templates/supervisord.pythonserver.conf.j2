[program:python_server]
directory={{ service_home_dir }}
{% if selfsigned_enabled %}
command=python3 {{ service_home_dir }}/.local/bin/uploadserver --directory {{ python_simple_web_server_path }} --theme dark --server-certificate  {{ cert_dir }}/combined/{{ settings.hostname }}.{{ settings.domain }}-self-signed.pem {{ startcloud_quick_start_port_forwards[0].guest }}
{% else %}
command=python3 {{ service_home_dir }}/.local/bin/uploadserver --directory {{ python_simple_web_server_path }} --theme dark --server-certificate  {{ cert_dir }}/combined/default-signed.pem {{ startcloud_quick_start_port_forwards[0].guest }} 
{% endif %}
autostart=true
autorestart=true
stdout_logfile=/var/log/python_server.log
stderr_logfile=/var/log/python_server_err.log
user={{ service_user }}